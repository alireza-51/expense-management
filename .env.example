# =============================================================================
# Expense Management System - Environment Variables
# =============================================================================
# Copy this file to .env and update the values according to your environment
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# Secret key for Django (REQUIRED in production)
# Generate a new one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=django-insecure-ruk!g%xwp%i5xdu44_3v2^r##i_@8cnabg_#ykdhjrgea#w6i!

# Debug mode (set to false in production)
# Accepts: true, false, 1, 0, yes, no, on, off
DJANGO_DEBUG=true

# Allowed hosts (comma-separated list)
# In production, add your domain(s) here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database engine (postgresql, mysql, sqlite3, etc.)
DB_ENGINE=django.db.backends.postgresql

# Database name
DB_NAME=expense

# Database user
DB_USER=postgres

# Database password
DB_PASSWORD=postgres

# Database host
DB_HOST=localhost

# Database port
DB_PORT=5432

# -----------------------------------------------------------------------------
# Internationalization
# -----------------------------------------------------------------------------

# Default language code (en, fa, etc.)
DJANGO_LANGUAGE_CODE=en

# -----------------------------------------------------------------------------
# Calendar Configuration
# -----------------------------------------------------------------------------

# Use Jalali calendar (true/false)
DJANGO_USE_JALALI_CALENDAR=true

# Default calendar type (jalali or gregorian)
DJANGO_CALENDAR_TYPE=jalali

# Default dashboard month (current, YYYY-MM format, or leave empty for current)
DJANGO_DEFAULT_DASHBOARD_MONTH=current

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing) Configuration
# -----------------------------------------------------------------------------

# Allow credentials in CORS requests (true/false)
DJANGO_CORS_ALLOW_CREDENTIALS=true

# Allowed origins (comma-separated list)
# Example: http://localhost:8080,https://example.com
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:8080

# Allowed headers (comma-separated list)
DJANGO_CORS_ALLOW_HEADERS=content-type,authorization,accept-language

# Allowed HTTP methods (comma-separated list)
DJANGO_CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# CSRF trusted origins (comma-separated list)
# Add your frontend domain(s) here
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8080,http://localhost:8000,http://127.0.0.1:8080,http://127.0.0.1:8000

# =============================================================================
# Production Environment Example
# =============================================================================
# Uncomment and modify these for production:
#
# DJANGO_SECRET_KEY=your-secret-key-here
# DJANGO_DEBUG=false
# DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# DB_NAME=expense_production
# DB_USER=expense_user
# DB_PASSWORD=your-secure-password
# DB_HOST=your-db-host
# DJANGO_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# DJANGO_CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# =============================================================================
