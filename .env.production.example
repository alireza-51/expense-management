# =============================================================================
# Expense Management System - Production Environment Variables
# =============================================================================
# Production configuration for Liara deployment
# Copy this to .env and update with your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# Secret key for Django (REQUIRED - DO NOT SHARE)
DJANGO_SECRET_KEY=6733ae5fd6c853dd8358300d76fe86c6dbe69d71bc3141429bb7235c4a6420cf8d8d30d4fe850107e509e51b17770f03ba35

# Debug mode - MUST be false in production
DJANGO_DEBUG=false

# Allowed hosts (comma-separated, no trailing slashes)
DJANGO_ALLOWED_HOSTS=expense-management.liara.run

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database engine
DB_ENGINE=django.db.backends.postgresql

# Database name
DB_NAME=postgres

# Database user
DB_USER=root

# Database password
DB_PASSWORD=ysYdwd11y5AcFclZRDFvmGty

# Database host
DB_HOST=expense-db

# Database port
DB_PORT=5432

# -----------------------------------------------------------------------------
# Internationalization
# -----------------------------------------------------------------------------

# Default language code
DJANGO_LANGUAGE_CODE=en

# Time zone
DJANGO_TIME_ZONE=Asia/Tehran

# -----------------------------------------------------------------------------
# Calendar Configuration
# -----------------------------------------------------------------------------

# Use Jalali calendar
DJANGO_USE_JALALI_CALENDAR=true

# Default calendar type
DJANGO_CALENDAR_TYPE=jalali

# Default dashboard month
DJANGO_DEFAULT_DASHBOARD_MONTH=current

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing) Configuration
# -----------------------------------------------------------------------------

# Allow credentials in CORS requests
DJANGO_CORS_ALLOW_CREDENTIALS=true

# Allowed origins (comma-separated, no trailing slashes)
DJANGO_CORS_ALLOWED_ORIGINS=https://expense-management.liara.run,https://expense-front.liara.run

# Allowed headers
DJANGO_CORS_ALLOW_HEADERS=content-type,authorization,accept-language

# Allowed HTTP methods
DJANGO_CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS

# CSRF trusted origins (comma-separated, no trailing slashes)
DJANGO_CSRF_TRUSTED_ORIGINS=https://expense-management.liara.run,https://expense-front.liara.run

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------

# Force HTTPS redirects
DJANGO_SECURE_SSL_REDIRECT=true

# Session cookie security
DJANGO_SESSION_COOKIE_SECURE=true
DJANGO_SESSION_COOKIE_HTTPONLY=true
DJANGO_SESSION_COOKIE_SAMESITE=None

# CSRF cookie security
DJANGO_CSRF_COOKIE_SECURE=true
DJANGO_CSRF_COOKIE_HTTPONLY=true
DJANGO_CSRF_COOKIE_SAMESITE=None

# Security headers
DJANGO_SECURE_BROWSER_XSS_FILTER=true
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=true
DJANGO_X_FRAME_OPTIONS=DENY

# HSTS (HTTP Strict Transport Security)
DJANGO_SECURE_HSTS_SECONDS=31536000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=true
DJANGO_SECURE_HSTS_PRELOAD=true

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# Pagination page size
DJANGO_PAGE_SIZE=10

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Root log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO

# Workspaces module log level
DJANGO_WORKSPACES_LOG_LEVEL=INFO

# Config module log level
DJANGO_CONFIG_LOG_LEVEL=INFO
